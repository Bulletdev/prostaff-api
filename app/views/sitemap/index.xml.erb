<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
        http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">

  <!-- Homepage -->
  <url>
    <loc><%= @base_url %>/</loc>
    <lastmod><%= @current_time %></lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>

  <!-- About Page -->
  <url>
    <loc><%= @base_url %>/about</loc>
    <lastmod><%= @current_time %></lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>

  <!-- Features Page -->
  <url>
    <loc><%= @base_url %>/features</loc>
    <lastmod><%= @current_time %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>

  <!-- Pricing Page -->
  <url>
    <loc><%= @base_url %>/pricing</loc>
    <lastmod><%= @current_time %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>

  <!-- Blog/Docs -->
  <url>
    <loc><%= @base_url %>/blog</loc>
    <lastmod><%= @current_time %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.7</priority>
  </url>

  <url>
    <loc><%= @base_url %>/docs</loc>
    <lastmod><%= @current_time %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.7</priority>
  </url>

  <!-- API Documentation -->
  <url>
    <loc><%= @base_url %>/api-docs</loc>
    <lastmod><%= @current_time %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.6</priority>
  </url>

  <!-- Auth Pages (public) -->
  <url>
    <loc><%= @base_url %>/login</loc>
    <lastmod><%= @current_time %></lastmod>
    <changefreq>yearly</changefreq>
    <priority>0.5</priority>
  </url>

  <url>
    <loc><%= @base_url %>/register</loc>
    <lastmod><%= @current_time %></lastmod>
    <changefreq>yearly</changefreq>
    <priority>0.5</priority>
  </url>

  <!-- Dashboard (public landing) -->
  <url>
    <loc><%= @base_url %>/dashboard</loc>
    <lastmod><%= @current_time %></lastmod>
    <changefreq>daily</changefreq>
    <priority>0.8</priority>
  </url>

  <!-- Competitive Matches (public) -->
  <url>
    <loc><%= @base_url %>/competitive-matches</loc>
    <lastmod><%= @current_time %></lastmod>
    <changefreq>daily</changefreq>
    <priority>0.7</priority>
  </url>

  <!-- Scouting (public) -->
  <url>
    <loc><%= @base_url %>/scouting</loc>
    <lastmod><%= @current_time %></lastmod>
    <changefreq>daily</changefreq>
    <priority>0.7</priority>
  </url>

  <!-- Analytics (public landing) -->
  <url>
    <loc><%= @base_url %>/analytics</loc>
    <lastmod><%= @current_time %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.7</priority>
  </url>

</urlset>
